{
  "extends": ["react-app"],
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks"
  ],
  "overrides": [
    {
      "files": ["**/*.ts?(x)"],
      "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "jsx-quotes": ["error", "prefer-double"],
        "eol-last": ["error", "always"],
        "@typescript-eslint/consistent-type-imports": "warn",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
      }
    }
  ]
}